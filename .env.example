
# FleetIQ Pro - Environment Variables Configuration
# Copy this file to .env and fill in your actual values

# ======================
# OpenAI Configuration
# ======================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your_openai_api_key_here

# OpenAI Model Settings (optional)
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=1500
OPENAI_TEMPERATURE=0.7

# ======================
# Server Configuration
# ======================
PORT=3001
NODE_ENV=development

# CORS Settings
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# ======================
# Database Configuration (if needed for production)
# ======================
# DATABASE_URL=postgresql://username:password@localhost:5432/fleetiq
# REDIS_URL=redis://localhost:6379

# ======================
# External API Keys (optional)
# ======================
# Mapbox for production maps
MAPBOX_API_KEY=your_mapbox_access_token_here

# Google Maps API (alternative)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Weather API for demand prediction
WEATHER_API_KEY=your_weather_api_key_here

# ======================
# TensorFlow.js Configuration
# ======================
# Model storage path
TF_MODEL_PATH=./models/
TF_BACKEND=cpu

# ======================
# Security Settings
# ======================
# JWT Secret for authentication (if implemented)
JWT_SECRET=your_jwt_secret_key_here

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ======================
# Monitoring & Logging
# ======================
LOG_LEVEL=info
ENABLE_LOGGING=true

# Sentry for error tracking (optional)
SENTRY_DSN=your_sentry_dsn_here

# ======================
# WebSocket Configuration
# ======================
WS_PORT=3002
ENABLE_WEBSOCKETS=true

# ======================
# AI Feature Flags
# ======================
ENABLE_OPENAI=true
ENABLE_TENSORFLOW=true
ENABLE_PREDICTIVE_MAINTENANCE=true
ENABLE_ROUTE_OPTIMIZATION=true

# ======================
# Performance Settings
# ======================
# API request timeouts (in milliseconds)
API_TIMEOUT=10000
OPENAI_TIMEOUT=30000

# Cache settings
CACHE_TTL=300
ENABLE_CACHE=true

# ======================
# Development Settings
# ======================
# Enable detailed debugging
DEBUG=fleetiq:*
VERBOSE_LOGGING=false

# Mock data for development
USE_MOCK_DATA=false
MOCK_VEHICLES_COUNT=5
MOCK_DRONES_COUNT=3